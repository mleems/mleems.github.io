        </div>
      </div>

			<div class="row">
				<div class="col-lg-12">
					</br>

          {% assign category_num = {{post.categories|size}} %}
          {% if category_num > 0 %}
					<span class="glyphicon glyphicon-folder-open" title="分类"></span>
						<span>&nbsp;
						{% for category in post.categories %}
						<a href="{{ site.hosturl }}/categories/#{{ category }}" title="查看分类{{ category }}中的全部文章" target="_blank" >{{ category }}</a>&nbsp;
						{% endfor %}
						</span>
          {% else %}
					<span class="glyphicon glyphicon-folder-open" title="分类"></span>
						<span>&nbsp;
						<a href="{{ site.hosturl }}/categories/#未分类" title="查看未分类的全部文章" target="_blank" >未分类</a>&nbsp;
						</span>
          {% endif %}

          {% assign tag_num = {{post.tags|size}} %}
          {% if tag_num > 0 %}
					<span class="glyphicon glyphicon-tags" title="标签"></span>
						<span>&nbsp;
						{% for tag in post.tags %}
						<a href="{{ site.hosturl }}/tags/#{{ tag }}" title="查看含有{{ tag }}标签的其他文章" target="_blank" >{{ tag }}</a>&nbsp;
						{% endfor %}
						</span>
          {% endif %}
				</div>
